<style type="text/css">
    .style2 {
         
           <% if @user.photos.last.image.url == nil %> 
           background: url('Piercycle.jpg') no-repeat center center ;
           <% else %> 
           background: url('<%= @user.photos.last.image.url %>') no-repeat center center !important;
           <% end %>
        background-attachment: fixed !important;
        background-size: cover !important;
        min-height: 768px !important;
        width: 100% !important;
        display: block !important;
    }
    .style3{
        text-align: left !important;
         background-color: transparent !important;
        font-family: 'Roboto Condensed', sans-serif !important;
        
        font-size: 2em !important;
        padding-top: 5px !important;
        margin-left: 30px !important;
        text-shadow: -1px -1px #1a1c1b !important;
        color: #fff !important;
    }
    p {
      color: #fff !important;
      font-size: 12px !important;
    }
</style>
<section id="home" class="row-fluid style2">
      <div class="dots">
        <article>
          <div id="welcome"></div>
          Welcome to Simply!
      <div class=" col-md-4 col-md-offset-4">
      <%= bootstrap_form_for(@user) do |f| %>
   <%= f.text_field :email, hide_label: true,  placeholder: "e-mail" %>
    <%= f.password_field :password, hide_label: true, placeholder: "Password"  %>
   <%= f.password_field :password_confirmation, hide_label: true, placeholder: "Password Confirmation" %>
   <%= f.text_field :first_name, hide_label: true, placeholder: "First Name"  %>
   <%= f.text_field :last_name, hide_label: true, placeholder: "Last Name"  %>
   <%= f.text_field :bio_text, hide_label: true,placeholder: "About you!" %>
   
   <%= f.file_field :avatar,hide_label: true, :class => "btn btn-default btn-primary" %> 
   <%= f.primary "Make My Simply!" %>
    <!-- Trigger email sent for new user -->
  
  <% end %>
   <!-- </div> -->
       
        </div>
      </div>
       </article>

</section>









