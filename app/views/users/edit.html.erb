
<section id="home" class="row-fluid">
      <div class="dots">
        <article>
          <div id="welcome"></div>
          Welcome to Simply!
      <div class=" col-md-4 col-md-offset-4">
      <%= bootstrap_form_for(@user) do |f| %>
   <%= f.text_field :email, hide_label: true,  placeholder: "e-mail" %>
    <%= f.password_field :password, hide_label: true, placeholder: "Password"  %>
   <%= f.password_field :password_confirmation, hide_label: true, placeholder: "Password Confirmation" %>
   <%= f.text_field :first_name, hide_label: true, placeholder: "First Name"  %>
   <%= f.text_field :last_name, hide_label: true, placeholder: "Last Name"  %>
   <%= f.text_field :bio_text, hide_label: true,placeholder: "About you!" %>
   <%= f.file_field :avatar, label_class: "custom-class",hide_label: true, :class => "btn btn-default btn-primary" %>
   <%= f.primary "Make My Simply!" %>
    <!-- Trigger email sent for new user -->
  </div>
  <% end %>
   <!-- </div> -->
        </article>
      </div>

</section>









