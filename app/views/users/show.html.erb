<style type="text/css">
    .style2 {
         
           <% if @user.photos.last.image.url == nil %> 
           background: url('Piercycle.jpg') no-repeat center center ;
           <% else %> 
           background: url('<%= @user.photos.last.image.url %>') no-repeat center center !important;
           <% end %>
        background-attachment: fixed !important;
        background-size: cover !important;
        min-height: 768px !important;
        width: 100% !important;
        display: block !important;
    }
    .style3{
        text-align: left !important;
         background-color: transparent !important;
        font-family: 'Roboto Condensed', sans-serif !important;
        
        font-size: 2em !important;
        padding-top: 5px !important;
        margin-left: 30px !important;
        text-shadow: -1px -1px #1a1c1b !important;
        color: #fff !important;
    }
</style>

<section id="home" class="row-fluid style2">
      <div class="dots">
      <div class="col-md-4">
        <article class="style3">
          <div id="welcome"></div>
          <%= @user.bio_text %>
          </article>
    </div>
          
     <div class="col-md-6">
        <%#= @user.email %><br />
        <%#= @user.id %><br />
        <%#= @user.first_name %><br />
        <%#= @user.last_name %><br />
        <%#= @user.bio_text %><br />
        <%#= image_tag @user.avatar.url(:thumb) %>

        <%#= link_to "Edit background image", new_user_photo_path(@user) %> 
            <%# @user.photos.each do |p| %>
                <%#= image_tag p.image.url(:medium) %><br />
                <%#= button_to "Remove Photo", user_photo_path(@user, p), method: :delete %><br />  
            <%# end %>
     </div>
       </div>
     </section>
     

