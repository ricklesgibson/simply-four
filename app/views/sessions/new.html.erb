<div class="container">
<div class="row">
      <div class=" well col-md-6 col-md-offset-3">

<h1>Log in to your Simply!</h1>

<%= bootstrap_form_for @user, :url => { :controller => "sessions", :action => "create" } do |f| %>

  <div class="field">
    <%= f.text_field :email %><br>
   <%= f.password_field :password %> 
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
  <% end %>
  </div>
  </div>
  </div>